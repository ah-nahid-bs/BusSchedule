@model List<BusSchedule.Models.Bus>

<h1>Bus Schedule</h1>
<table>
    <thead>
        <tr>
            <th>Route</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Bus Type</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bus in Model)
        {
            <tr>
                <td>@bus.Route</td>
                <td>@bus.DepartureTime</td>
                <td>@bus.ArrivalTime</td>
                <td>@bus.BusType</td>
                <td><a href="/Bus/Details/@bus.Id">View Details</a></td>
            </tr>
        }
    </tbody>
</table>
